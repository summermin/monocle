.middle-box.medium
  .box-header
    New project
  .box-body
    = form_for [@user, Project.new] do |f|
      .field
        = f.label :name
        .clearfix
        = f.text_field :name
      .field
        = f.label :description
        .clearfix
        = f.text_field :description
      .field
        = f.label "what kind of project is this?"
        .clearfix
        .radio-buttons
          = f.label :project_type, "One-time"
          = f.radio_button :project_type, "o"
          = f.label :project_type, "Recurring"
          = f.radio_button :project_type, "r"
      .field
        = f.label :start_date
        .clearfix
        = f.date_field :start_date
      .field
        = f.label :target_end_date
        .clearfix
        = f.date_field :end_date
      = f.hidden_field :user_id, value: @user.id
      .actions
        = f.submit 'Create Project', class: 'btn green'